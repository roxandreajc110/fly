<div class="container">
  <h1 class="text-center"> Airports </h1>
  <section class="row text-center cities-controls">
      <a href="<%= new_airport_path %>" class="btn btn-default"> New Airport </a>
  </section>
  <% @airports.each do |a| %>
    <article class="row city">
      <ul>
        <li class="col-md-2"><strong><%= a.name %></strong></li>
        <li class="col-md-2"><%= a.city.name %></li>
        <li class="col-md-2"><%= a.city.country_name %></li>
        <li class="col-md-1"><%= a.city.time_zone %></li>
        <li class="col-md-1"><a href="<%= airport_path(a.id) %>" data-method="delete" class="btn btn-danger"> Delete </a></li>
        <li class="col-md-1"><a href="<%= edit_airport_path(a.id) %>" class="btn btn-primary"> Edit </a></li>
        <li class="col-md-1"><a href="<%= airport_path(a.id) %>" class="btn btn-info"> Show </a></li>
      </ul>
    </article>
  <% end if @airports.any? %>
</div>
