<% form_name ||= "Manage" %>
<h1 class="text-center">  <%= form_name %> airport </h1>
<h2> New City </h2>
<%= form_for @city, remote: true do |fc| %>
  <div id="city-errors-messages" style="display:none;"></div>
  <div class="form-group">
    <%= fc.label :name%>
    <%= fc.text_field :name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= fc.label :country_name%>
    <%= fc.text_field :country_name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= fc.label :time_zone%>
    <%= fc.text_field :time_zone, class: "form-control" %>
  </div>
  <button type="submit" name="button" class="btn btn-primary"> New City </button>
<% end %>
<%= form_for @airport , method: (form_name.downcase == 'edit' ? 'put' : 'post') do |f| %>
  <%= render 'shared/errors_messages', object: @airport %>
  <div class="form-group">
    <%= f.label :name%>
    <%= f.text_field :name, class: "form-control" %>
  </div>
  <div class="form-group">
    <select name="airport[city_id]" >
      <% @cities.each do |c| %>
        <option value="<%= c.id %>"> <%= c.name %></option>
      <% end %>
    </select>
  </div>
  <button type="submit" name="button" class="btn btn-primary"> <%= form_name %> airport </button>
  <a href="<%= airports_path %>" class="btn btn-default"> View all






   </a>
<% end %>
