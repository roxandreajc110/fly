<div class="container">

<h1 class="text-center"> WELCOME TO FLY </h1>

  <div class="row">
    <div class="col-md-offset-3 col-md-6">

      <%= form_tag search_by_city_path, method: :get do %>
        <%= label_tag :city %>
        <select name="city_id">
          <% @cities.each do |c| %>
            <option value="<%= c.id %>"> <%= c.name %> </option>
          <% end %>
        </select>
        <br><br>
        <button type="submit" name="submit" class="btn btn-primary"> Buscar </button>
      <% end %>
    </div>
  </div>

</div>
